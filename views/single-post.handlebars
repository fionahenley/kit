<article class="post">
  <div class="title">
    <a href="{{post.content}}" target="_blank">{{post.title}}</a>
    <span>({{post.content}})</span>
  </div>
  <div class="meta">
    {{post.vote_count}} like(s) by {{post.user.firstname}} {{post.user.lastname}} on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.firstname}} {{user.lastname}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>