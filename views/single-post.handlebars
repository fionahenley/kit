<div class="container homeImage">
<img src="/assets/images/logo6.png" height="100px" width="100px" alt="kit_logo">
</div>

<div class="container postedByContainer">
            <p class="postedBy">Posted by: {{post.user.firstname}} {{post.user.lastname}}</p>
            <p class="postDate">{{post.created_at}}</p>
</div>
<div class="container commentMainBox">
  <article class="post">
    <div class="title"></div>
      <p class="postTitle">Title: {{post.title}}</p><br>
        <q>{{post.content}}</q><br><br>
  </div>

<form class="comment-form">
  <div class="container commentForm">
    {{post.vote_count}}<button type="button" class="upvote-btn likeButton icon is-medium fa-solid fa-heart is-rounded"></button>
    <br><br>
    <textarea class="commentText" name="comment-body"></textarea><span><button class="commentBtn" type="submit">Post</button></span>
  </div>
</form>

  {{!-- <div>
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div> --}}
</article>

<div class="container comments commentsBox">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.firstname}} {{user.lastname}}
            <div class="commentBox">
              <div class="text">
                 {{comment_text}}
</section>
      

  {{/each}}
      </div>

</div>

</div>

<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>